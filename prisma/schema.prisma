// Necessary for Next auth
model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? @db.Text
    access_token      String? @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? @db.Text
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
    @@index([userId])
}

model AllergenInSpanish {
    id                String   @id @default(cuid())
    allergen          Allergen @unique
    allergenInSpanish String
}

model AllergenClient {
    Client   Client   @relation(fields: [clientId], references: [userId], onDelete: Cascade)
    clientId String
    allergen Allergen

    @@id([clientId, allergen])
    @@index([clientId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
}

model User {
    id            String       @id @default(cuid())
    accounts      Account[]
    Admin         Admin?
    Client        Client?
    Comment       Comment[]
    email         String       @unique
    emailVerified DateTime?
    passwordHash  String?
    image         String?      @default("https://www.kindpng.com/picc/m/24-248253_user-profile-default-image-png-clipart-png-download.png")
    name          String
    nif           String?      @unique
    role          Role         @default(client)
    sessions      Session[]
    RecipeUser    RecipeUser[]
    Recipe        Recipe[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

//DataBase
model Admin {
    userId  String    @id
    user    User      @relation(fields: [userId], references: [id], onDelete: Cascade)
    Ticket  Ticket[]
    Post    Post[]
    Comment Comment[]

    @@index([userId])
}

model Cart {
    id          String        @id @default(cuid())
    client      Client?
    CartProduct CartProduct[]
}

model CartProduct {
    cartId    String
    cart      Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
    amount    Float
    productId String
    product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

    @@id([cartId, productId])
    @@index([cartId])
    @@index([productId])
}

model ECategoryInSpanish {
    id                String    @id @default(cuid())
    category          ECategory @unique
    imageURL          String
    categoryInSpanish String
}

model Client {
    userId                   String                     @id
    user                     User                       @relation(fields: [userId], references: [id], onDelete: Cascade)
    address                  String?
    numberOfReports          Int                        @default(0)
    phoneNumber              String?
    points                   Int                        @default(0)
    location                 String?
    CP                       Int?
    // socio  Bool
    cart                     Cart                       @relation(fields: [cartId], references: [id], onDelete: Cascade)
    cartId                   String                     @unique
    order                    Order[]
    Ticket                   Ticket[]
    OnSiteWorkshopAttendance OnSiteWorkshopAttendance[]
    OnlineWorkshopViews      OnlineWorkshopViews[]
    ReportedComment          ReportedComment[]
    allergenClient           AllergenClient[]

    @@index([userId])
}

model Comment {
    id              String            @id @default(cuid())
    adminId         String?
    Admin           Admin?            @relation(fields: [adminId], references: [userId])
    createdAt       DateTime          @default(now())
    description     String?           @db.TinyText
    imageURL        String?
    rating          Float
    reported        Boolean           @default(false)
    title           String?
    ProductComment  ProductComment[]
    ReportedComment ReportedComment[]
    User            User?             @relation(fields: [userId], references: [id])
    userId          String?
    Recipe          Recipe?           @relation(fields: [recipeId], references: [id])
    recipeId        String?

    @@index([adminId])
    @@index([userId])
    @@index([recipeId])
}

model Edible {
    productId        String           @id
    product          Product          @relation(fields: [productId], references: [id], onDelete: Cascade)
    Ingredient       Ingredient       @relation(fields: [ingredientId], references: [id], onDelete: Cascade)
    category         ECategory
    nutritionFacts   NutritionFacts   @relation(fields: [nutritionFactsId], references: [id])
    priceByWeight    Float
    origin           String?
    conservation     String?
    allergens        EdibleAllergen[]
    ingredientId     String           @unique
    nutritionFactsId String           @unique

    @@index([productId])
}

model EdibleAllergen {
    edible   Edible   @relation(fields: [edibleId], references: [productId], onDelete: Cascade)
    edibleId String
    allergen Allergen

    @@id([edibleId, allergen])
    @@index([edibleId])
}

model Ingredient {
    id               String             @id @default(cuid())
    name             String             @unique
    RecipeIngredient RecipeIngredient[]
    Edible           Edible?
}

model IngredientUnitInSpanish {
    id             String         @id @default(cuid())
    ingredientUnit IngredientUnit @unique
    unitInSpanish  String
}

model NECategoryInSpanish {
    id                String     @id @default(cuid())
    category          NECategory @unique
    imageURL          String
    categoryInSpanish String
}

model NonEdible {
    productId String     @id
    product   Product    @relation(fields: [productId], references: [id], onDelete: Cascade)
    category  NECategory
    price     Float

    @@index([productId])
}

model NutritionFacts {
    id            String  @id @default(cuid())
    ingredients   String
    energy        Float
    fat           Float
    carbohydrates Float
    protein       Float
    Edible        Edible?
}

model OnlineWorkshop {
    OnlineWorkshopViews OnlineWorkshopViews[]
    videoURL            String
    workshopId          String                @id
    workshop            Workshop              @relation(fields: [workshopId], references: [id], onDelete: Cascade)

    @@index([workshopId])
}

model OnSiteWorkshop {
    date                     DateTime
    places                   Int
    OnSiteWorkshopAttendance OnSiteWorkshopAttendance[]
    workshopId               String                     @id
    workshop                 Workshop                   @relation(fields: [workshopId], references: [id], onDelete: Cascade)

    @@index([workshopId])
}

model OnlineWorkshopViews {
    clientId         String
    client           Client         @relation(fields: [clientId], references: [userId])
    onlineWorkshopId String
    onlineWorkshop   OnlineWorkshop @relation(fields: [onlineWorkshopId], references: [workshopId])
    state            Boolean

    @@id([onlineWorkshopId, clientId])
    @@index([clientId])
    @@index([onlineWorkshopId])
}

model OnSiteWorkshopAttendance {
    clientId         String
    client           Client         @relation(fields: [clientId], references: [userId])
    onSiteWorkshopId String
    onSiteWorkshop   OnSiteWorkshop @relation(fields: [onSiteWorkshopId], references: [workshopId], onDelete: Cascade)

    @@id([onSiteWorkshopId, clientId])
    @@index([clientId])
    @@index([onSiteWorkshopId])
}

model Order {
    id                   String              @id @default(cuid())
    dateTime             DateTime            @default(now())
    price                String
    client               Client?             @relation(fields: [clientId], references: [userId])
    clientId             String?
    ProductOrder         ProductOrder[]
    shipmentAddress      String
    UnregisteredClient   UnregisteredClient? @relation(fields: [unregisteredClientId], references: [id])
    unregisteredClientId String?             @unique

    @@index([clientId])
}

model Post {
    id              String   @id @default(cuid())
    adminUserId     String
    admin           Admin    @relation(fields: [adminUserId], references: [userId])
    title           String
    description     String
    publicationDate DateTime
    finalDate       DateTime
    type            PostType

    @@index([adminUserId])
}

model Product {
    id             String           @id @default(cuid())
    cartProduct    CartProduct[]
    description    String
    Edible         Edible?
    imageURL       String
    name           String           @unique
    plainName      String           @unique
    NonEdible      NonEdible?
    orders         ProductOrder[]
    ProductComment ProductComment[]
    ProductUnit    ProductUnit
    stock          Float
}

model ProductComment {
    commentId String  @id
    comment   Comment @relation(fields: [commentId], references: [id])
    productId String
    product   Product @relation(fields: [productId], references: [id])

    @@index([commentId])
    @@index([productId])
}

model ProductOrder {
    order     Order   @relation(fields: [orderId], references: [id])
    amount    Float
    orderId   String
    product   Product @relation(fields: [productId], references: [id])
    productId String

    @@id([orderId, productId])
    @@index([orderId])
    @@index([productId])
}

model Recipe {
    id               String             @id @default(cuid())
    allergens        RecipeAllergen[]
    createdAt        DateTime           @default(now())
    description      String?
    difficulty       RecipeDifficulty
    directions       RecipeDirections[]
    imageURL         String
    name             String
    portions         Int
    RecipeIngredient RecipeIngredient[]
    preparationTime  Int
    cookingTime      Int
    userId           String
    User             User               @relation(fields: [userId], references: [id])
    RecipeUser       RecipeUser[]
    Comment          Comment[]

    @@index([userId])
}

model RecipeAllergen {
    allergen Allergen
    recipeId String
    Recipe   Recipe   @relation(fields: [recipeId], references: [id])

    @@id([recipeId, allergen])
    @@index([recipeId])
}

model RecipeDifficultyInSpanish {
    id                  String           @id @default(cuid())
    difficulty          RecipeDifficulty @unique
    difficultyInSpanish String
}

model RecipeDirections {
    id        String @id @default(cuid())
    number    Int
    direction String @db.Text
    recipeId  String
    Recipe    Recipe @relation(fields: [recipeId], references: [id])

    @@index([recipeId])
}

model RecipeIngredient {
    amount       Float
    ingredientId String
    Ingredient   Ingredient     @relation(fields: [ingredientId], references: [id])
    recipeId     String
    Recipe       Recipe         @relation(fields: [recipeId], references: [id])
    unit         IngredientUnit

    @@id([recipeId, ingredientId])
    @@index([ingredientId])
    @@index([recipeId])
}

model RecipeUser {
    recipeId String
    Recipe   Recipe @relation(fields: [recipeId], references: [id])
    userId   String
    User     User   @relation(fields: [userId], references: [id])

    @@id([recipeId, userId])
    @@index([recipeId])
    @@index([userId])
}

model ReportedComment {
    clientUserId String
    client       Client  @relation(fields: [clientUserId], references: [userId])
    commentId    String
    comment      Comment @relation(fields: [commentId], references: [id])

    @@id([clientUserId, commentId])
    @@index([clientUserId])
    @@index([commentId])
}

model SuggestionForm {
    id          String         @id @default(cuid())
    description String
    title       String
    type        SuggestionType
}

model SupraCategory {
    id                    String                  @id @default(cuid())
    SupraCategoryRelation SupraCategoryRelation[]
    supraCategoryName     String                  @unique
}

model SupraCategoryRelation {
    id              String        @id @default(cuid())
    supraCategoryId String
    SupraCategory   SupraCategory @relation(fields: [supraCategoryId], references: [id])
    category        ECategory     @unique

    @@index([supraCategoryId])
}

model Ticket {
    id          String     @id
    adminId     String
    admin       Admin      @relation(fields: [adminId], references: [userId])
    clientId    String
    client      Client     @relation(fields: [clientId], references: [userId])
    description String
    state       Boolean
    ticketType  TicketType

    @@index([clientId])
    @@index([adminId])
}

model UnregisteredClient {
    id          String @id @default(cuid())
    address     String
    email       String
    name        String
    phoneNumber String
    order       Order?
}

model Workshop {
    id             String          @id @default(cuid())
    name           String
    description    String
    imageURL       String
    OnSiteWorkshop OnSiteWorkshop?
    OnlineWorkshop OnlineWorkshop?
}

//Enumerables

enum Allergen {
    celery
    cereals
    crustaceans
    eggs
    fish
    milk
    molluscs
    mustard
    nuts
    lupin
    peanuts
    sesameSeeds
    soybeans
    sulphurDioxideAndSulphites
}

enum ECategory {
    driedFruits
    flours
    jams
    legumes
    nuts
    oils
    pastas
    syrups
    teas
    yeast
}

enum IngredientUnit {
    cup
    grams
    kilograms
    liters
    milliliters
    ounce
    pinch
    pound
    tablespoon
    teaspoon
    unit
}

enum NECategory {
    accessories
    cleaningProducts
    personalCare
    home
}

enum PostType {
    news
    announcement
}

enum ProductUnit {
    grams
    kilograms
    liters
    milliliters
    unit
}

enum RecipeDifficulty {
    easy
    moderate
    hard
}

enum Role {
    admin
    client
}

enum SuggestionType {
    store
    website
}

enum TicketType {
    refund
    order
    payment
    shipping
    website
}
